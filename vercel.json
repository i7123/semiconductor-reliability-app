{
  "version": 2,
  "builds": [
    {
      "src": "frontend/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "functions": {
    "backend/app/main.py": {
      "runtime": "python3.9"
    }
  },
  "env": {
    "SECRET_KEY": "@secret-key",
    "DATABASE_URL": "@database-url",
    "DAILY_CALCULATION_LIMIT": "10"
  }
}